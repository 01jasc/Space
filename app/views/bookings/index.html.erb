<div>
  <div class="container move-down">
    <h1 class="text-center mb-3">My Dashboard</h1>
    <div class="card glass-card">
      <div class="card-body">
        <div class="card-title">
          <h2>Hello, Jane!</h2>
        </div>
        <%= image_tag "unnamed.jpg", class: "avatar-larger"%>
        </div>
      </div>
  </div>
  <div class="container">
    <h1 class="text-center text-white m-4 p-3">Activity Journal</h1>
    <div class="row">
      <div class="col-12 cards-frame">
            <% @bookings.each do |booking| %>

              <div class="booking-card glass-card">
                  <div class="bg-booking" style="background-image: url('<%= booking.facility.picture %>')">
                  </div>
                  <div class="card-content glass-card mt-3 p-2">
                    <h3><%= booking.facility.name %></h3>
                    <p>Starttime: <%= booking.start_time %></p>
                    <p>Endtime: <%= booking.end_time %></p>
                    <p>Checked In? <%= booking.checked_in ? "✅" : "❌" %></p>
                    <strong class="green-footer"><h4>⭐️ favorite</h4></strong>
                  </div>
              </div>

            <% end  %>
      </div>
    </div>
  </div>
</div>
